{
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo",
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["global.type.d.ts", "src/**/*"],
  "exclude": ["node_modules", "jest.config.ts", ".eslintrc.js"]
}
